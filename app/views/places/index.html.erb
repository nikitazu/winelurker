<h1>Listing places</h1>

<table>
  <tr>
    <th>Country</th>
    <th>City</th>
    <th>Region</th>
    <th>Street</th>
    <th>Building</th>
    <th>Title</th>
    <th>Image url</th>
    <th>Nearest metro</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.country %></td>
    <td><%= place.city %></td>
    <td><%= place.region %></td>
    <td><%= place.street %></td>
    <td><%= place.building %></td>
    <td><%= place.title %></td>
    <td><%= place.image_url %></td>
    <td><%= place.nearest_metro %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

